@using BookStore.Models.Models
@model Company


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient text-white">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update Company" : "Create Company") </h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4 mb-5">
        <form method="post" class="row">
            <div class="row">
                <div class="col-12">
                    <input asp-for="Id" type="hidden" />
                  
                    <div class="mb-3 row">
                        <label class="form-label">Title</label>
                        <input asp-for="Name" class="form-control" id="name" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="mb-3 row">
                        <label class="form-label">Description</label>
                        <input asp-for="StreetAddress" class="form-control" id="name"></input>
                       

                    </div>
                    <div class="mb-3 row">
                        <label class="form-label">City</label>
                        <input asp-for="City" class="form-control" id="name" />

                    </div>
                    <div class="mb-3 row">
                        <label class="form-label">State</label>
                        <input asp-for="State" class="form-control" id="name" />

                    </div>
                    <div class="mb-3 row">
                        <label class="form-label">Postal Code</label>
                        <input asp-for="PostalCode" class="form-control" id="name" />

                    </div>
                    <div class="mb-3 row">
                        <label class="form-label"> Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" id="name" />

                    </div>

                    <div class="row">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-primary form-control">@(Model.Id != 0 ? "Update" : "Create")  <i class="bi bi-plus-circle-fill"></i></button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List <i class="bi bi-arrow-left-circle-fill"></i></a>
                        </div>
                    </div>
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
  
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}