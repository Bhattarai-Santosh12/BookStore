@model Category

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient text-white">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            
                <div class="mb-3 row">
                    <label class="form-label">Category Name</label>
                    <input asp-for="Name" disabled class="form-control" id="name" name="Name" />

                </div>
                <div class="mb-3 row">
                    <label class="form-label">Display Order</label>
                    <input asp-for="DisplayOrder" class="form-control" disabled id="name" name="DisplayOrder" />


                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control"><i class="bi bi-trash"></i> Delete </button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-action="Index" class="btn btn-primary form-control"><i class="bi bi-arrow-left"></i> Back to List </a>
                    </div>
                </div>


                
        </form>
    </div>
</div>



@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
