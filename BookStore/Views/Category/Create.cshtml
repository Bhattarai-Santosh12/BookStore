@model Category 

<form  method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <label  class="form-label">Category Name</label>
            <input asp-for="Name" class="form-control" id="name" name="name" />
             
        </div>
        <div class="mb-3 row">
            <label class="form-label">Display Order</label>
            <input asp-for="DisplayOrder" class="form-control" id="name" name="DisplayOrder" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Create  <i class="bi bi-plus-circle-fill"></i></button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control">Back To List <i class="bi bi-arrow-left-circle-fill"></i></a>
            </div>
        </div>
       
       
    </div>
</form>